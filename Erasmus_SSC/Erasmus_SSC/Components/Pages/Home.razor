@page "/"
@inject NavigationManager Nav

<PageTitle>Sustainable Skills in Construction</PageTitle>

<section class="hero">
    <div class="hero__overlay"></div>

    <header class="brandbar">

        <a href="https://erasmus-plus.ec.europa.eu/about-erasmus/what-is-erasmus"
           target="_blank"
           rel="noopener noreferrer"
           title="Learn more about Erasmus+">
            <img src="/images/erasmus_wood.png"
                 alt="Erasmus+ logo"
                 class="brandbar__logo erasmus" />
        </a>


        <a href="#partners" title="Go to Our Partners">
            <img src="/images/ssc-logo.png"
                 alt="Sustainable Skills in Construction logo"
                 class="brandbar__logo ssc" />
        </a>
    </header>
    <div class="hero__content">
        <h1 class="hero__title">
            Sustainable Skills in Construction
        </h1>
        <p class="hero__subtitle">
            A European VET collaboration that advances modern woodworking and timber-construction skills with a strong focus on sustainability.
        </p>
        <div class="hero__cta">
            <a class="btn btn--primary" href="/about">Learn more</a>

        </div>
        @*         <button class="btn" @onclick='() => Nav.NavigateTo("/about")'>
            Learn more <span class="btn__icon" aria-hidden="true">→</span>
        </button> *@
    </div>
</section>

<section class="partners" id="partners">

    <h2 class="partners__title">Our partners</h2>

    <div class="partners__grid">
        @foreach (var p in Partners)
        {
            <a class="partner-card"
               href="@($"/partners/{p.Slug}")"
               aria-label="@($"Open partner {p.Name}")">
                <div class="partner-card__media">
                    <img src="@($"/images/partners/{p.LogoFile}")"
                         alt="@($"{p.Name} logo")"
                         loading="lazy" />
                </div>
                <div class="partner-card__body">
                    <h3>@p.Name</h3>
                </div>
                <span class="partner-card__ripple" aria-hidden="true"></span>
            </a>
        }
    </div>
</section>

@code {
    private record Partner(string Name, string Slug, string LogoFile);

    private readonly List<Partner> Partners = new()
    {
        new("Mercantec",                       "mercantec",        "Mercantec_transparent.png"),
        new("Fagskolen Rogaland",             "rogaland",        "fagskolen-rogaland-logo-transparent.png"),
        new("Godalen Upper Secondary School", "godalen",          "godalen-logo.png"),
        new("Graafschap College",             "graafschap",       "logo-graafschap.png"),
        new("Learnmark Horsens",              "learnmark",        "learnmark-logo.png"),
        new("Rakvere Ametikool",              "rakvere",          "rakvere-logo.png"),
        new("Salpaus",                        "salpaus",          "salpaus_logo.png"),
        new("Tradium",                        "tradium",          "logo_tradium-transparent.png"),
        new("VTI Roeselare",                  "sint-michiel",    "VTI-logo.png"),

    };
}
